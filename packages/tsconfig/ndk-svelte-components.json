{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "NDK Svelte Components",
    "extends": "./base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "$lib": ["src/lib"],
            "$lib/*": ["src/lib/*"]
        },
        "module": "Node16",
        "target": "ESNext",
        "moduleResolution": "NodeNext"
    }
}
